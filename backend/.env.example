# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bloom_scroll
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Milvus Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=bloom_embeddings

# Application Settings
APP_NAME=Bloom Scroll
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# Security (Legacy)
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Janua SSO (Centralized Authentication)
JANUA_API_URL=http://localhost:8000/api/v1
JANUA_JWT_SECRET=dev-shared-janua-secret-32chars
JANUA_JWT_ALGORITHM=HS256
AUTH_ENABLED=true
# Production: https://auth.madfam.io/api/v1

# API Keys for External Services
OPENALEX_EMAIL=your-email@example.com  # For polite pool access

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=6
MAX_CONCURRENT_SCRAPERS=5
REQUEST_TIMEOUT_SECONDS=30

# Feed Generation
DEFAULT_FEED_SIZE=20
MINI_BLOOM_SIZE=5
SERENDIPITY_WEIGHT=0.7

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
BIAS_MODEL=bucketresearch/politicalBiasBERT
EMBEDDING_DIMENSION=384

# CORS Settings (adjust for production)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
PORT=3095
